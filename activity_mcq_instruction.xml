<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="50dp"
    android:background="#72CECCCC"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    tools:context=".mcq_instruction">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="180dp"
            android:textStyle="bold"
            android:text="User:" />

        <TextView
            android:id="@+id/a2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="italic" />

    </LinearLayout>
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginBottom="70dp"
        android:text="MCQ Instruction" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_margin="5dp"
        android:text="1.No Negative Marking" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:text="2.Don't navigate window" />

    <TextView
        android:id="@+id/textView7"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3.Attempt all the Question" />

    <TextView
        android:id="@+id/textView8"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4.Only 20 Question" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:text="5.Mischeif activities not allowed" />

    <TextView
        android:id="@+id/textView10"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6.Each question has 4 option" />

    <TextView
        android:id="@+id/textView11"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="7.Each question has only one correct answer " />
    <TextView
        android:id="@+id/a"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="8. For each correct answer you will be provided 5 marks" />
    <Button
        android:id="@+id/button"
        android:layout_margin="80dp"
        android:layout_width="100dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/shaperound"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Skip" />


</LinearLayout>